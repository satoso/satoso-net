@charset "utf-8";

/* initialize.css を先に読み込むこと */

body {
  font-family: Verdana, sans-serif;
  margin: 0;
  line-height: 1.4;
  word-wrap: break-word; /* 長い単語やURLは折り返す */
  width: 92%;
  max-width: 36em;
  margin: 0 auto;
}

/* http://colorschemedesigner.com/#3B11Tw0w0w0w0 */
a {
  text-decoration: underline;
  color: #4186d3;
}

a:visited {
  text-decoration: underline;
  color: #274f7d;
}

em {
  font-style: normal;
  font-weight: normal;
  text-decoration: underline;
}
strong {
  font-style: normal;
  font-weight: bold;
  text-decoration: none;
}

q:before {
  content: open-quote;
}

q:after {
  content: close-quote;
}

q {
  font-style: normal;
  background-color: #ceddef;
  quotes: "「" "」" "『" "』";
}


h1 {
  font-size: 140%;
  font-weight: bold;
  margin: 1em 0;
}

h1,
h1 a,
h1 a:visited {
  text-decoration: none;
  color: #000;
}

nav {
  margin: 0.6em 0 1em;
}

h2 {
  margin: 0.8em 0;
  font-weight: bold;
}

section {
  margin: 0 0 3em 0;
}

body {
  background-color: #fff;
}

ul,
ol {
  margin: 0.6em 0 0.6em 1.8em;
}

ul li,
ol li {
  margin: 0.4em 0;
}

/* スマートフォン用レイアウト */
@media screen and (max-device-width:480px) {

  body {
    -webkit-text-size-adjust: none; /* 画面横向きで拡大しない */
    max-width: 92%;
  }

}
